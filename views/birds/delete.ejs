<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/records/delete.css" />
<link rel="stylesheet" href="/stylesheets/birds/delete.css" />
<%- include('../partials/nav') %>

<main>
  <% if (user) { %>
    <% if (bird.owner.equals(user?.profile._id)) { %>
      <div class="left">
        <h2>Are you sure you want to delete this bird?</h2>
        <h2><%= bird.name %></h2>
        <section class="instructions">
          <h3>To delete an individual sighting, navigate back to the bird's details and click the 'X' next to the sighting.</h3>
          <h3>To remove this bird from a record, navigate to the record's details and click the 'X' next to the bird's name in species seen.</h3>
        </section>
        <form action="/birds/<%= bird._id %>?_method=DELETE" method="POST">
          <input type="submit" value="Delete Bird" role="button" class="button-59">
        </form>
      </div>
      <div class="right">
        <p class="caption">Bald Eagle | <i>Haliaeetus leucocephalus</i></p>
      </div>
    <% } else { %>
      <h2>This is a no fly zone!</h2>
    <% } %>
  <% } %>
</main>
<section class="space">

</section>

<%- include('../partials/footer') %>