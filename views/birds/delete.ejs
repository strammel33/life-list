<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/records/forms.css" />
<%- include('../partials/nav') %>

<main>
  <div class="left">
    <h2><%= title %></h2>
    <h3><%= bird.name %></h3>
    <h3>Are you sure you want to delete this bird?</h3>
    <p>All sightings associated with this bird will be deleted. To delete an individual sighting, navigate back to the bird's details and click the 'X' next to the sighting.</p>
    <% if (bird.owner.equals(user?.profile._id)) { %>
      <form action="/birds/<%= bird._id %>?_method=DELETE" method="POST">
        <button class="btn" type="submit">Delete Bird</button>
      </form>
    <% } else { %>
      <h2>This is a no fly zone!</h2>
    <% } %>
  </div>
  <div class="right">
    <% if (bird.instances.length) { %>
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Count</th>
            <th>Behavior</th>
          </tr>
        </thead>
        <tbody>
          <% bird.instances.forEach(function(instance) { %>
            <tr>
              <td><%= instance.date %></td>
              <td><%= instance.count %></td>
              <td><%= instance.behavior %></td>
          <% }) %>
          </tr>
        </tbody>
      </table>
    <% } %>
  </div>
</main>
<section class="space">

</section>

<%- include('../partials/footer') %>