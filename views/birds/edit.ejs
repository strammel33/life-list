<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/records/forms.css" />
<link rel="stylesheet" href="/stylesheets/birds/new.css" />
<link rel="stylesheet" href="/stylesheets/birds/edit.css" />
<%- include('../partials/nav') %>

<main>
  <div class="left">
    <% if (user) { %>
      <h1><%= title %></h1>
      <form id="edit-form" action="/birds/<%= bird._id %>?_method=PUT" method="POST">
        <label for="name-input">Name of Bird:</label>
        <input type="text" name="name" id="name-input" autocomplete="off" value=" <%= bird.name %> ">
        <input type="submit" value="Update Bird" role="button" class="button-59">
      </form>
    <% } else { %>
      <h2>Fowl!</h2>
    <% } %>
  </div>
  <div class="right">
    <p class="caption">White-fronted Tern/Tara | <i>Sterna striata</i></p>
  </div>
</main>
<section class="space">

</section>

<%- include('../partials/footer') %>