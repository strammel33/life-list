<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/birds/index.css" />
<%- include('../partials/nav') %>

<main>
  <div class="left">
    <% if (user) { %>
      <h1><%= title %></h1>
      <div class="title-info">
        <% let total = 0 %>
        <% birds.forEach((bird) => { %>
          <% total += 1 %>
        <% }) %>
        <h3>Total: <%= total %> Species</h3>
        <form action="/birds/new" method="GET">
          <input type="submit" value="ADD BIRD" role="button" class="button-59">
        </form>
      </div>
      <section class="list">
        <ul class="bird-list">
          <% birds.forEach((bird) => { %>
            <li>
              <a href="/birds/<%= bird._id %>"><%= bird.name %></a>
            </li>
          <% }) %>
        </ul>
      </section>
    <% } else { %>
      <h2>There's a fox in the henhouse!</h2>
    <% } %>
  </div>
  <div class="right">
    <p class="caption">Purple Gallinule | <i>Porphyrio martinicus</i></p> 
  </div>
</main>
<section class="space">

</section>

<%- include('../partials/footer') %>