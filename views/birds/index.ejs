<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/birds/index.css" />
<%- include('../partials/nav') %>

<main>
  <div class="left">
    <% if (user) { %>
      <div class="title-info">
        <% let total = 0 %>
        <% birds.forEach((bird) => { %>
          <% total += 1 %>
        <% }) %>
        <h1><%= title %></h1>
        <h3>Total: <%= total %> Species</h3>
        <input type="submit" value="Add New Bird" role="button" class="button-59">
      </div>
      <section class="list">
        <ul class="bird-list">
          <% birds.forEach((bird) => { %>
            <li>
              <a href="/birds/<%= bird._id %>"><%= bird.name %></a>
            </li>
          <% }) %>
        </ul>
      </section>
    <% } else { %>
      <h2>There's a fox in the henhouse!</h2>
    <% } %>
  </div>
  <div class="right">
    <p class="caption"></p> 
  </div>
</main>
<section class="space">

</section>

<%- include('../partials/footer') %>