<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/records/forms.css" />
<%- include('../partials/nav') %>

<main>
  <div class="left">
    <% if (user) { %>
    <h2><%= title %></h2>
    <form id="new-form" action="/records" method="POST">
      <label for="title-input">Title:</label>
      <input type="text" name="title" id="title-input" autocomplete="off" value="<%= record.title %>">
      <label for="record-date">Date of Record (dd/mm/yyyy):</label>
      <input type="date" name="date" id="record-date" value="<%= record.date %>">
      <label for="description">Description:</label>
      <textarea name="description" id="description" cols="30" rows="10"><%= record.description %></textarea>
      <% } else { %>
        <h2>There's a fox in the henhouse!</h2>
        <% } %>
      </div>
      <div class="right">
        <button type="submit">Update Record</button>
      </form>
</main>
<section class="space">

</section>

<%- include('../partials/footer') %>
