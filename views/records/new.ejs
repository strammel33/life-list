<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/records/forms.css" />
<%- include('../partials/nav') %>

<main>
  <div class="left">
    <% if (user) { %>
    <h2><%= title %></h2>
    <form id="new-form" action="/records" method="POST">
      <label for="title-input">Title:</label>
      <input type="text" name="title" id="title-input" autocomplete="off">
      <label for="record-date">Date of Record (dd/mm/yyyy):</label>
      <input type="date" name="date" id="record-date">
      <label for="description">Description:</label>
      <textarea name="description" id="description" cols="30" rows="10" placeholder="Include as much relevant information as you like. 
      For example: 2 mile loop through grassland and riparian habitat. 
      Weather: 62 degrees and cloudy. 8:30 to 10:30am.
      Or:
      Driving on Main Street at 6:15pm, sunny."></textarea>
      <button type="submit">Add Birds</button>
    </form>
    <% } else { %>
      <h2>You shouldn't be here!</h2>
    <% } %>
  </div>
  <div class="right">
    <h2>big beautiful bird</h2>
</main>
<section class="space">

</section>

<%- include('../partials/footer') %>
