<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/records/forms.css" />
<%- include('../partials/nav') %>

<main>
  <div class="left">
    <% if (user) { %>
    <h2>Are you sure you want to delete this record?</h2>
    <h3><%= record.title %></h3>
    <h4><%= record.date %></h4>
    <p> <%= record.description %></p>
    <h4>All bird instances associated with this record will be deleted.</h4>
    <h4>To delete a specific bird sighting, navigate to sighting's details.</h4>
    <% if (record.owner.equals(user?.profile._id)) { %>
      <form action="/records/<%= record._id %>?_method=DELETE" method="POST">
        <button class="btn" type="submit">Delete Record</button>
      </form>
    <% } %>
    <% } else { %>
      <h2>There's a fox in the henhouse!</h2>
    <% } %>
  </div>
  <div class="right">
    <h2>Birds Recorded</h2>
    <ul>
      <% record.birds.forEach((bird) => { %>
      <li><a href="/birds/<%= bird._id %>"><%= bird.name %></a></li>
      <% }) %>
    </ul>
  </div>
</main>
<section class="space">

</section>

<%- include('../partials/footer') %>